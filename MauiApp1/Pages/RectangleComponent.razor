@inherits CanvasComponent
@inject IJSRuntime JSRuntime

<div style="background-color: black;
    width:300px;
    height:300px;
    top: @(DataContext.Y + "px");
    left: @(DataContext.X + "px");
    position: absolute" 
    @onmousemove="MouseMove" 
    @onmousedown="MouseDown"
    @onmouseup="MouseUp" 
    @onmouseout="MouseOut" />