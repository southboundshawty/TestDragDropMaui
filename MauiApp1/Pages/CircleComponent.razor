@inherits CanvasComponent
@inject IJSRuntime JSRuntime

<div style="background-color:darkblue;
    width:300px;
    height:300px;
    top: @(DataContext.Y + "px");
    left: @(DataContext.X + "px");
    position: absolute;
    border-radius: 100px" 
    @onmousemove="MouseMove" 
    @onmousedown="MouseDown"
    @onmouseup="MouseUp" 
    @onmouseout="MouseOut">
    <div style="background-color:red;
    width:200px;
    height:200px;"></div>
</div>